<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_7sdp"
   >

    <LinearLayout
        android:id="@+id/llProductImages"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_95sdp"
        android:background="@drawable/bg_bestsellers"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivProduct1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5sdp"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/instant" />

            <ImageView
                android:id="@+id/ivProduct2"
                android:layout_width="@dimen/_40sdp"
                android:visibility="gone"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_product"
                android:src="@drawable/masala" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivProduct3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5sdp"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/instant" />

            <TextView
                android:id="@+id/tvProductCount"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_product"
                android:gravity="center"
                android:visibility="gone"
                android:text="+16"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/llProductImages"
        app:layout_constraintStart_toStartOf="@id/llProductImages"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Milk, Curd and Paner"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
             />
        <TextView
            android:id="@+id/tvTotalProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="19 products"
            android:textColor="#847F7F"
            android:textSize="@dimen/_11ssp"
            />
        <TextView
            android:id="@+id/tvSeeALl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="See all"
            android:textStyle="bold"
            android:padding="@dimen/_4sdp"
            android:gravity="center"
            android:textColor="@color/green"
            android:background="@drawable/bg_see_all"
            android:textSize="@dimen/_11ssp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>